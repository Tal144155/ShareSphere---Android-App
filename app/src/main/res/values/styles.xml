<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize dark theme attributes here -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize default theme attributes here -->
    </style>
    <style name="RoundButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="color">@color/black</item>
    </style>
    <style name="RoundButtonTrans" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button_trans</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="color">@color/black</item>
    </style>
    <style name="smallRoundButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="color">@color/black</item>
    </style>
    <style name="smallRoundButtonTrans" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button_trans</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="color">@color/black</item>
    </style>

    <style name="smallButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/semiTransparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="color">@color/black</item>
    </style>

    <style name="tinyRoundButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8dp</item>
        <item name="color">@color/black</item>
    </style>
    <style name="bigRoundButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="bigRoundButtonTrans" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button_trans</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
        <item name="color">@color/black</item>
    </style>
    <style name="menu">
        <item name="android:background">@color/bright_purple</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="tinyRoundButtonTrans" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_button_trans</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8dp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="header">
        <item name="fontFamily">@font/akaya_telivigala</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="icon">
        <item name="android:tint">@color/dark_blue</item>
    </style>
</resources>